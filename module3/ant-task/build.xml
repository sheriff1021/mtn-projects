<project name="ant-task-" default="compile" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="version" value="2.0" />
  <property name="Main-class"  value="com.test.Project"/>
  <target name="init">
    <mkdir dir="${build}"/>
  </target>
  <target name="compile" depends="init" >
    <javac srcdir="${src}" destdir="${build}"/>
  </target>
  <target name="resolve" description="--> retrieve dependencies with ivy">
    <retrieve />
  </target>

<!--
  <target name="dist" depends="compile" >
    <mkdir dir="${dist}/lib"/>
    <jar jarfile="${dist}/lib/testProject.jar" basedir="${build}"/>
  </target>
-->
<target name="jar" depends="compile">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/HelloWorld.jar" basedir="build/classes">
            <manifest>
               <attribute name="Main-Class" value="com.test.Project"/>
            </manifest>
        </jar>
    </target>
  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
