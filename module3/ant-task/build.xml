<project name="ant-task-" default="compile" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="version" value="2.0" />
  <property name="Main-class"  value="com.test.Project"/>
  <target name="init">
    <mkdir dir="${build}"/>
  </target>
  <target name="compile" depends="init" >
    <javac srcdir="${src}" destdir="${build}"/>
    <javac srcdir="test" destdir="${build}"/>
  </target>
<target name="jar" depends="compile">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/HelloWorld.jar" basedir="build/com/test">
            <manifest>
               <attribute name="Main-Class" value="com.test.Project"/>
            </manifest>
        </jar>
    </target>
<target name="test" depends="compile">
	<junit>
		<classpath>
		<pathelement location="${src}"/>
		<test name="UnitTest"/>
		</classpath>
	</junit>
</target>
  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
